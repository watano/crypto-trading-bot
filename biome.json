{
   "files": {
      "maxSize": 10485760,
      "ignore": ["src/*.js", "docs/*.js", "data/*.js"]
   },
   "formatter": {
      "enabled": true,
      "lineWidth": 256,
      "indentStyle": "space",
      "indentWidth": 3,
      "ignore": ["dist/*.js"]
   },
   "javascript": {
      "parser": {
         "unsafeParameterDecoratorsEnabled": true
      },
      "formatter": {
         "quoteStyle": "single"
      }
   },
   "json": {
      "parser": {
         "allowComments": true
      }
   },
   "linter": {
      "enabled": true,
      "ignore": ["dist/*.js"],
      "rules": {
         "style": {
            "useConst": "off",
            "noUselessElse": "off",
            "noInferrableTypes": "off",
            "noParameterAssign": "off",
            "noUnusedTemplateLiteral": "warn",
            "useImportType": "off",
            "useTemplate": "warn"
         },
         "correctness": {
            "noUnreachable": "warn"
         },
         "suspicious": {
            "noFocusedTests": "off",
            "noDoubleEquals": "warn",
            "noRedeclare": "off",
            "noExplicitAny": "off"
         },
         "complexity": {
            "useRegexLiterals": "off",
            "noForEach": "off",
            "noUselessSwitchCase": "off",
            "noStaticOnlyClass": "off",
            "useLiteralKeys": "off"
         }
      }
   }
}
